<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>판매목록</title>
</head>
<body>
<h2>판매목록</h2>
<div id="container">
    <div>
       <table>
           <tr>
               <td >이름</td>
               <td>가격</td>
           </tr>
           <tr v-for="item in items">
               <td > <a :href="item.link">{{item.name}}</a></td>
               <td>{{item.price}}</td>
           </tr>
       </table>
    </div>
</div>

<script src="/vue/dist/vue.min.js"></script>
<script>

    (function () {

        function ajaxGet(uri, callback) {
            fetch(uri).then(function (res) {
                if (res.ok) {
                    res.json().then(callback);
                } else {
                    console.log("Looks like the response wasn't perfect, got status", res.status);
                }
            }, function (e) {
                console.log("Fetch failed!", e);
            });
        }


        let app = new Vue({
            el: '#container', //셀렉터
            data: { //데이터 바인딩
                items : []
            },
            created : function(){},
            mounted : function(){
                let _this = this;
                ajaxGet('/item/all',
                    function (response) {
                        response.forEach(function (val) {
                            val.link = 'http://localhost:3000/page/item/detail?id=' + val.id
                        })
                        _this.items = response;
                    })
            },
            watch : { // 프로퍼티 변경시 감지
            },
            methods : {
                onClickSignIn : function () {


                }
            }
        });
    })();

</script>
</body>
</html>