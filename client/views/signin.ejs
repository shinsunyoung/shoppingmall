<!doctype html>
<html lang="en" xmlns:v-on="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>로그인</title>
</head>
<body>
    <h2>로그인</h2>
    <div id="container">
        <div>
            <p> 이메일 : <input type="text" v-model="email"> </p>
            <p> 비밀번호 : <input type="password" v-model="password"> </p>
            <p> <input type="button" value="로그인" v-on:click="onClickSignIn"> </p>
        </div>
    </div>

    <script src="/vue/dist/vue.min.js"></script>
    <script src="/common/common.js"></script>

    <script>
        (function () {

            let app = new Vue({
                el: '#container', //셀렉터
                data: { //데이터 바인딩
                    email : "",
                    password : ""
                },
                created : function(){},
                mounted : function(){},
                watch : { // 프로퍼티 변경시 감지
                },
                methods : {
                    onClickSignIn : function () {
                        let email = this.email;
                        let password = this.password;

                        ajaxPost('/user/signin', {
                            email: email,
                            password: password
                        }, function (response) {
                            if(response === true){
                                window.location.href = 'http://localhost:3000/page/item/list';
                            }
                            else {
                                alert("로그인 실패!");
                            }
                        });
                    }
                }
            });
        })();
    </script>
</body>
</html>